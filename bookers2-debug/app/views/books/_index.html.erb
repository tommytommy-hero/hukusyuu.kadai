<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>


      <tr id="book_<%= book.id %>">


        <td><%= link_to(book.user) do %>
              <%= image_tag book.user.get_profile_image(50,50) %>
            <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>

　　    <td class="favorite-btn"><%= render "favorites/favorites", book: book %></td>
        <td>
          <div id="star-rate<%= book.id%>"></div>
           <script>
            $('#star-rate<%= book.id %>').empty();
            $('#star-rate<%= book.id%>').raty({
               size      : 36,
               starOff   : '<%= asset_path('star-off.png') %>',
               starOn    : '<%= asset_path('star-on.png') %>',
               half      : false,
               readOnly: true,
               score: <%= book.star %>,
            });
           </script>
        </td>

        <td class="comments-count">コメント数:<%= book.book_comments.count %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<%= form_with url: user_search_path(@user),local: false, method: :get do |f| %>
  <%= f.date_field :created_at %>
  <%= f.submit '検索', class: 'btn btn-primary'  %>
<% end %>

<div id="search_result">
  <% if @search_book.present? %>
    <%= render 'users/search', search_book: @search_book %>
  <% end %>
</div>


